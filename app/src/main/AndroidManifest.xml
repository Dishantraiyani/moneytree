<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.moneytree.app">

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

	<queries>
		<intent>
			<action android:name="android.intent.action.MAIN" />
		</intent>
	</queries>

	<application
		android:name=".common.NSApplication"
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:networkSecurityConfig="@xml/network_security_config"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.HubzDriver"
		android:usesCleartextTraffic="true"
		tools:targetApi="n"
		tools:replace="android:allowBackup">
		<activity
			android:name=".ui.noNetwork.NoNetworkActivity"
			android:exported="false"
			android:launchMode="singleTask"/>
		<activity
			android:name=".ui.qrCode.QRCodeActivity"
			android:exported="false"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.recharge.history.NSRechargeHistoryActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.success.SuccessActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.recharge.detail.NSRechargeDetailActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.invite.NSInviteActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.signup.SignUpActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.memberActivation.NSMemberActivationFormActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.activationForm.NSActivationFormActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.activate.NSActivateActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.productDetail.MTProductsDetailActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.mycart.productDetail.NSProductsDetailActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.mycart.cart.NSCartActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.mycart.products.NSProductsActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.mycart.productCategory.NSProductsCategoryActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.packageVoucher.packageList.NSPackageListActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.packageVoucher.packageDetail.PackageDetailActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.wallets.verifyMember.VerifyMemberActivity"
			android:exported="false"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.memberTree.MemberTreeActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.wallets.redeemForm.NSAddRedeemActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.wallets.transfer.NSTransferActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.profile.edit.NSEditActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.levelMember.LevelMemberTreeActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.splash.NSSplashActivity"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.home.NSHomeActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.login.NSLoginActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.main.NSMainActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.reports.NSReportsActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.vouchers.NSVouchersActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.slots.NSSlotsActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.profile.password.NSChangePasswordActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".ui.recharge.NSRechargeActivity"
			android:exported="false"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />

		<uses-library
			android:name="org.apache.http.legacy"
			android:required="false" />

		<service
			android:name=".fcm.MyFirebaseMessagingService"
			android:exported="false"
			android:permission="true">
			<intent-filter>
				<action android:name="com.google.firebase.MESSAGING_EVENT" />
			</intent-filter>
		</service>

		<meta-data
			android:name="com.google.firebase.messaging.default_notification_channel_id"
			android:value="@string/default_notification_channel_id" />
	</application>

</manifest>
