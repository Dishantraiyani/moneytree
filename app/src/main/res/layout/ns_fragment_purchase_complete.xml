<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.password.NSChangePasswordFragment">

    <include android:id="@+id/layout_header"
        layout="@layout/layout_header"/>

    <androidx.core.widget.NestedScrollView
        style="@style/LayoutWidthHeightZero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_20sdp"
            android:paddingHorizontal="@dimen/_15sdp">

            <TextView
                style="@style/LoginSubFontsWrap"
                android:text="@string/member_id_title_"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_member_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_member_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    app:guidelineUseRtl="true"
                    app:chainUseRtl="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

                    <ImageView
                        android:id="@+id/iv_member_id"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/tab_profile"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@string/username_title" />

                    <EditText
                        android:id="@+id/et_member_id"
                        style="@style/LoginSubFontsZeroWrap"
                        android:minHeight="@dimen/_38sdp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:lines="1"
                        android:background="@drawable/phone_white_background"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:hint="@string/enter_member_id"
                        android:gravity="center_vertical"
						android:imeOptions="actionSearch"
                        android:textColorHint="@color/hint_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_member_id"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/LoginSubFontsWrap"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/member_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
				app:cardBackgroundColor="@color/background_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_wallet_amount">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_member_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    app:guidelineUseRtl="true"
                    app:chainUseRtl="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

                    <ImageView
                        android:id="@+id/iv_member_name"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/tab_profile"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@string/username_title" />

                    <TextView
                        android:id="@+id/et_member_name"
                        style="@style/LoginSubFontsZeroWrap"
                        android:minHeight="@dimen/_38sdp"
                        android:textColor="@color/black"
                        android:lines="1"
                        android:background="@null"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:hint="@string/member_name"
                        android:textColorHint="@color/hint_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_member_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center_vertical"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

			<TextView
				style="@style/LoginSubFontsWrap"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_5sdp"
				android:layout_marginTop="@dimen/_15sdp"
				android:text="@string/mobile"
				android:textColor="@color/black"
				android:textSize="@dimen/_10sdp" />

			<androidx.cardview.widget.CardView
				android:id="@+id/card_mobile"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_6sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:cardBackgroundColor="@color/background_gray"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/card_wallet_amount">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_mobile"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true">

					<ImageView
						android:id="@+id/iv_mobile"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_phone"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/username_title" />

					<TextView
						android:id="@+id/et_mobile"
						style="@style/LoginSubFontsZeroWrap"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						android:lines="1"
						android:background="@null"
						android:paddingHorizontal="@dimen/_10sdp"
						android:hint="@string/mobile"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_mobile"
						app:layout_constraintEnd_toEndOf="parent"
						android:gravity="center_vertical"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<TextView
				style="@style/LoginSubFontsWrap"
				android:text="@string/remark"
				android:textColor="@color/black"
				android:layout_marginStart="@dimen/_5sdp"
				android:layout_marginTop="@dimen/_15sdp"
				android:textSize="@dimen/_10sdp"/>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_reamrk"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_6sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_remark"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_remark"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/remark"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/username_title" />

					<EditText
						android:id="@+id/et_remark"
						style="@style/LoginSubFontsZeroWrap"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						android:inputType="textPassword"
						android:lines="1"
						android:background="@drawable/phone_white_background"
						android:paddingHorizontal="@dimen/_10sdp"
						android:hint="@string/enter_remark"
						android:gravity="center_vertical"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_remark"
						app:layout_constraintEnd_toEndOf="parent" />

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/_15sdp">

				<TextView
					style="@style/LoginSubFontsWrap"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_5sdp"
					android:text="@string/products"
					android:textColor="@color/black"
					android:textSize="@dimen/_10sdp" />

				<TextView
					style="@style/LoginSubFontsWrap"
					android:layout_height="wrap_content"
					android:layout_marginEnd="@dimen/_5sdp"
					android:text="@string/amount_title"
					android:layout_gravity="end|center_vertical"
					android:textColor="@color/black"
					android:textSize="@dimen/_10sdp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/_5sdp">

				<TextView
					android:id="@+id/tv_product_title"
					style="@style/LoginSubFontsWrap"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_5sdp"
					android:textColor="@color/black"
					android:textSize="@dimen/_10sdp" />

				<TextView
					android:id="@+id/tv_amount"
					style="@style/LoginSubFontsWrap"
					android:layout_height="wrap_content"
					android:layout_marginEnd="@dimen/_5sdp"
					android:layout_gravity="end|center_vertical"
					android:textColor="@color/black"
					android:fontFamily="@font/inter_semi_bold"
					android:textSize="@dimen/_10sdp" />
			</LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                style="@style/LayoutWidthHeightZeroWrap"
                android:background="@drawable/login_button_border"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_new_password"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
