<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cl_repurchase" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_repurchase_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_order_no_repurchase"
            style="@style/LoginSubFontsZeroWrap"
            tools:text="Order No: "
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:paddingStart="@dimen/_10sdp"
            android:lines="1"
            android:textStyle="bold"
            android:fontFamily="@font/inter_semi_bold"
            android:paddingEnd="@dimen/_5sdp"
            app:layout_constraintEnd_toStartOf="@id/iv_next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_member_id"
            style="@style/LoginSubFontsZeroWrap"
            tools:text="Member Id: "
            android:textSize="@dimen/_11sdp"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_10sdp"
            android:lines="1"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/inter_medium"
            android:paddingEnd="@dimen/_5sdp"
            app:layout_constraintEnd_toStartOf="@id/iv_next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_no_repurchase" />

        <LinearLayout
            android:id="@+id/ll_total"
            style="@style/LoginSubFontsZeroWrap"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/iv_next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_member_id" >

            <TextView
                android:id="@+id/tv_total_title"
                style="@style/LoginSubFontsWrap"
                android:text="@string/total"
                android:gravity="start"
                app:guidelineUseRtl="true"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:lines="1"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/inter_regular"
                android:paddingEnd="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/tv_total"
                style="@style/LoginSubFontsWrap"
                tools:text="Value"
                android:gravity="start"
                app:guidelineUseRtl="true"
                android:textColor="@color/orange"
                android:lines="1"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/inter_medium"
                android:paddingEnd="@dimen/_5sdp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            style="@style/LoginSubFontsZeroWrap"
            tools:text="998899"
            app:guidelineUseRtl="true"
            android:textColor="@color/gray_text"
            android:gravity="center|start"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/inter_regular"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_next"
            app:layout_constraintTop_toBottomOf="@id/ll_total" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/arrow_right"
            android:alpha="0.8"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/next"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>