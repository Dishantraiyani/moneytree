<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.wallets.transaction.NSTransactionFragment">

	<include android:id="@+id/layout_header"
		layout="@layout/layout_header"/>

	<TextView
		android:id="@+id/tv_payment_summary"
		style="@style/LayoutWidthHeightZero"
		android:layout_height="wrap_content"
		android:clipToPadding="false"
		android:text="@string/please_specify_month"
		android:textColor="@color/black"
		android:gravity="center|start"
		android:textSize="@dimen/_11sdp"
		android:layout_marginTop="@dimen/_15sdp"
		android:paddingHorizontal="@dimen/_10sdp"
		app:layout_constraintTop_toBottomOf="@id/layout_header"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/tv_start_date"
		style="@style/LayoutWidthHeightZero"
		android:layout_height="@dimen/_38sdp"
		android:clipToPadding="false"
		android:textColor="@color/black"
		android:gravity="center|start"
		android:textSize="@dimen/_10sdp"
		android:hint="@string/select_month_year"
		android:layout_marginTop="@dimen/_5sdp"
		android:layout_marginHorizontal="@dimen/_10sdp"
		android:paddingHorizontal="@dimen/_15sdp"
		android:background="@drawable/gray_border"
		android:fontFamily="@font/inter_medium"
		app:layout_constraintTop_toBottomOf="@+id/tv_payment_summary"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<Button
		android:id="@+id/btn_submit"
		style="@style/LayoutWidthHeightZeroWrap"
		android:background="@drawable/login_button_border"
		android:text="@string/view_summary"
		android:textColor="@color/white"
		android:textSize="@dimen/_12sdp"
		android:textAllCaps="false"
		android:fontFamily="@font/inter_regular"
		android:layout_marginHorizontal="@dimen/_10sdp"
		android:layout_marginTop="@dimen/_15sdp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_start_date"/>


</androidx.constraintlayout.widget.ConstraintLayout>
