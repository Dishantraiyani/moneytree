<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.vouchers.NSMainVoucherFragment">

	<ImageView
		android:id="@+id/iv_kyc_user"
		android:layout_width="@dimen/_60sdp"
		android:layout_height="@dimen/_60sdp"
		android:src="@drawable/ic_user_kyc"
		app:layout_constraintVertical_chainStyle="packed"
		app:layout_constraintBottom_toTopOf="@+id/tv_kyc_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/tv_kyc_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/kyc_verification_pending"
		android:textColor="@color/orange"
		android:fontFamily="@font/inter_semi_bold"
		android:textSize="@dimen/_14sdp"
		android:layout_marginTop="@dimen/_15sdp"
		app:layout_constraintBottom_toTopOf="@+id/tv_kyc_sub_title"
		app:layout_constraintTop_toBottomOf="@id/iv_kyc_user"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/tv_kyc_sub_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/your_kyc_verification_is"
		android:textColor="@color/black"
		android:gravity="center"
		android:fontFamily="@font/inter_medium"
		android:textSize="@dimen/_11sdp"
		android:paddingHorizontal="@dimen/_25sdp"
		android:layout_marginHorizontal="@dimen/_30sdp"
		android:layout_marginTop="@dimen/_5sdp"
		app:layout_constraintBottom_toTopOf="@+id/btn_submit"
		app:layout_constraintTop_toBottomOf="@id/tv_kyc_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<Button
		android:id="@+id/btn_submit"
		style="@style/LayoutWidthHeightWrap"
		android:background="@drawable/login_button_border"
		android:text="@string/check_verification"
		android:textColor="@color/white"
		android:textAllCaps="false"
		android:textSize="@dimen/_12sdp"
		android:paddingHorizontal="@dimen/_30sdp"
		android:fontFamily="@font/inter_regular"
		android:layout_marginHorizontal="@dimen/_15sdp"
		android:layout_marginTop="@dimen/_20sdp"
		android:layout_marginBottom="@dimen/_10sdp"
		app:layout_constraintTop_toBottomOf="@+id/tv_kyc_sub_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
