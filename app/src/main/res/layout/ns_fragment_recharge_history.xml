<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.NSRegisterFragment">

    <include android:id="@+id/layout_header"
        layout="@layout/layout_header"/>

	<TextView
		android:id="@+id/tv_recharge_type_title"
		style="@style/LoginSubFontsZeroWrap"
		android:text="@string/recharge_type"
		android:textColor="@color/black"
		android:layout_marginStart="@dimen/_10sdp"
		android:layout_marginTop="@dimen/_15sdp"
		android:textSize="@dimen/_10sdp"
		app:layout_constraintEnd_toStartOf="@id/tv_status"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/card_recharge_type"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_6sdp"
		app:cardCornerRadius="@dimen/_5sdp"
		android:layout_marginStart="@dimen/_10sdp"
		android:layout_marginEnd="@dimen/_8sdp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/card_status_type"
		app:layout_constraintTop_toBottomOf="@id/tv_recharge_type_title">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_recharge_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/_1sdp"
			app:guidelineUseRtl="true"
			app:chainUseRtl="true"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

			<ImageView
				android:id="@+id/iv_recharge_type"
				android:layout_width="@dimen/_15sdp"
				android:layout_height="@dimen/_15sdp"
				android:src="@drawable/ic_operator_ico"
				android:layout_marginStart="@dimen/_10sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:contentDescription="@string/username_title" />

			<Spinner
				android:id="@+id/recharge_type_spinner"
				style="@style/LoginSubFontsZeroWrap"
				android:paddingHorizontal="@dimen/_10sdp"
				android:minHeight="@dimen/_38sdp"
				android:textSize="@dimen/_12sdp"
				android:dropDownWidth="@dimen/_200sdp"
				android:spinnerMode="dropdown"
				android:includeFontPadding="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@id/iv_recharge_type"
				app:layout_constraintEnd_toEndOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/tv_status"
		style="@style/LoginSubFontsZeroWrap"
		android:text="@string/status"
		android:textColor="@color/black"
		android:layout_marginEnd="@dimen/_10sdp"
		android:layout_marginTop="@dimen/_15sdp"
		android:textSize="@dimen/_10sdp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/tv_recharge_type_title"
		app:layout_constraintTop_toBottomOf="@id/layout_header"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/card_status_type"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_6sdp"
		app:cardCornerRadius="@dimen/_5sdp"
		android:layout_marginEnd="@dimen/_10sdp"
		app:layout_constraintStart_toEndOf="@id/card_recharge_type"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_recharge_type_title">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_status_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/_1sdp"
			app:guidelineUseRtl="true"
			app:chainUseRtl="true"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

			<ImageView
				android:id="@+id/iv_status_type"
				android:layout_width="@dimen/_15sdp"
				android:layout_height="@dimen/_15sdp"
				android:src="@drawable/ic_filter"
				android:layout_marginStart="@dimen/_10sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:contentDescription="@string/username_title" />

			<Spinner
				android:id="@+id/status_type_spinner"
				style="@style/LoginSubFontsZeroWrap"
				android:paddingHorizontal="@dimen/_10sdp"
				android:minHeight="@dimen/_38sdp"
				android:textSize="@dimen/_12sdp"
				android:includeFontPadding="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@id/iv_status_type"
				app:layout_constraintEnd_toEndOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_recharge_list_not_found"
        style="@style/LayoutWidthHeightZero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_recharge_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_recharge_not_found"
            style="@style/LayoutWidthHeightZero"
            android:paddingVertical="@dimen/_6sdp"
            android:clipToPadding="false"
            android:text="@string/no_item"
            android:textColor="@color/black"
            android:gravity="center|bottom"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_recharge_not_found_sub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_recharge_not_found_sub"
            style="@style/LayoutWidthHeightZero"
            android:clipToPadding="false"
            android:text="@string/no_recharge_available"
            android:textColor="@color/gray_text"
            android:gravity="center|top"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recharge_not_found"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        style="@style/LayoutWidthHeightZero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_recharge_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recharge_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="0dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:clipToPadding="false"
            android:visibility="gone"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/cv_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
