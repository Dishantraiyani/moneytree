<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.add.NSAddRegisterFragment">

    <include android:id="@+id/layout_header"
        layout="@layout/layout_header"/>

	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_register_not_found"
			android:layout_width="match_parent"
			style="@style/LayoutWidthHeightWrap"
			android:paddingVertical="@dimen/_20sdp"
			android:paddingHorizontal="@dimen/_15sdp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@id/layout_header"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

			<androidx.cardview.widget.CardView
				android:id="@+id/card_full_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_10sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_full_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_full_name"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/tab_profile"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/username_title" />

					<EditText
						android:id="@+id/et_full_name"
						style="@style/LoginSubFontsZeroWrap"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						android:background="@drawable/phone_white_background"
						android:paddingHorizontal="@dimen/_10sdp"
						android:hint="@string/full_name"
						android:inputType="textPersonName"
						android:gravity="center_vertical"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_full_name"
						app:layout_constraintEnd_toEndOf="parent" />

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_mobile"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_15sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/card_full_name">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_mobile"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_mobile"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_phone"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/username_title" />

					<EditText
						android:id="@+id/et_phone"
						style="@style/LoginSubFontsZeroWrap"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						android:background="@drawable/phone_white_background"
						android:paddingHorizontal="@dimen/_10sdp"
						android:hint="@string/phone"
						android:maxLength="10"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_mobile"
						app:layout_constraintEnd_toEndOf="parent"
						android:autofillHints="phone"
						android:inputType="phone|number"
						android:imeOptions="actionNext"
						android:digits="0123456789"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginTop="@dimen/_15sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/card_mobile">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_email"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_email"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_email"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/password_title" />

					<EditText
						android:id="@+id/et_email"
						style="@style/LoginSubFontsZeroWrap"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						android:background="@drawable/phone_white_background"
						android:paddingHorizontal="@dimen/_10sdp"
						android:hint="@string/email"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_email"
						app:layout_constraintEnd_toEndOf="parent"
						android:autofillHints="emailAddress"
						android:inputType="textEmailAddress"
						android:imeOptions="actionNext"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_15sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/card_email">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_password"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_password"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_password"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/password_title" />

					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/etPasswordLayout"
						style="@style/LoginSubFontsZeroWrap"
						android:background="@drawable/phone_white_background"
						app:passwordToggleEnabled="true"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						app:hintEnabled="false"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_password"
						app:layout_constraintEnd_toEndOf="parent">

						<com.google.android.material.textfield.TextInputEditText
							android:id="@+id/et_password"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="@string/password_title"
							android:inputType="textPassword"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textSize="@dimen/_12sdp"
							android:fontFamily="@font/inter_regular"
							android:background="@drawable/phone_white_background"
							android:textColor="@color/black"
							android:textColorHint="@color/hint_color"/>
					</com.google.android.material.textfield.TextInputLayout>

					<!--<EditText
                        android:id="@+id/et_password"
                        style="@style/LoginSubFontsZeroWrap"
                        android:minHeight="@dimen/_38sdp"
                        android:textColor="@color/black"
                        android:background="@drawable/phone_white_background"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:hint="@string/password_title"
                        android:visibility="gone"
                        android:textColorHint="@color/hint_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_password"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:autofillHints="phone"
                        android:inputType="textPassword"
                        />-->

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_confirm_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_15sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:layout_marginHorizontal="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/card_password">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_confirm_password"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_confirm_password"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_password"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/password_title" />

					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/etConfirmPasswordLayout"
						style="@style/LoginSubFontsZeroWrap"
						android:background="@drawable/phone_white_background"
						app:passwordToggleEnabled="true"
						android:minHeight="@dimen/_38sdp"
						android:textColor="@color/black"
						app:hintEnabled="false"
						android:textColorHint="@color/hint_color"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_confirm_password"
						app:layout_constraintEnd_toEndOf="parent">

						<com.google.android.material.textfield.TextInputEditText
							android:id="@+id/et_confirm_password"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="@string/confirm_password_title"
							android:inputType="textPassword"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textSize="@dimen/_12sdp"
							android:fontFamily="@font/inter_regular"
							android:background="@drawable/phone_white_background"
							android:textColor="@color/black"
							android:textColorHint="@color/hint_color"/>
					</com.google.android.material.textfield.TextInputLayout>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<LinearLayout
				android:id="@+id/ll_check"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/_20sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/card_confirm_password">

				<CheckBox
					android:id="@+id/cb_checked"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:buttonTint="@color/orange"
					android:layout_marginStart="@dimen/_5sdp"/>

				<TextView
					android:id="@+id/tv_terms_conditions"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:paddingStart="@dimen/_5sdp"
					android:textColorLink="@color/orange"
					android:paddingEnd="@dimen/_15sdp"
					android:lineSpacingExtra="@dimen/_2sdp"
					android:textColor="@color/black"
					android:fontFamily="@font/inter_regular"/>

			</LinearLayout>

			<Button
				android:id="@+id/btn_submit"
				style="@style/LayoutWidthHeightZeroWrap"
				android:background="@drawable/login_button_border"
				android:text="@string/submit"
				android:textColor="@color/white"
				android:textAllCaps="true"
				android:textSize="@dimen/_12sdp"
				android:fontFamily="@font/inter_regular"
				android:layout_marginHorizontal="@dimen/_5sdp"
				android:layout_marginTop="@dimen/_30sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/ll_check"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
