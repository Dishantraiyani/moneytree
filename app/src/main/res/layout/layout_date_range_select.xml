<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/_50sdp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<TextView
		android:id="@+id/tv_start_date"
		style="@style/LayoutWidthHeightZero"
		android:layout_height="@dimen/_30sdp"
		android:clipToPadding="false"
		tools:text="01/05/2023"
		android:textColor="@color/gray_text"
		android:gravity="center"
		android:textSize="@dimen/_10sdp"
		android:layout_marginStart="@dimen/_10sdp"
		android:background="@drawable/gray_border"
		android:fontFamily="@font/inter_regular"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/view_line1"/>

	<ImageView
		android:id="@+id/view_line1"
		android:layout_width="@dimen/_16sdp"
		android:layout_height="@dimen/_16sdp"
		android:src="@drawable/date_range"
		android:visibility="visible"
		android:layout_marginHorizontal="@dimen/_10sdp"
		app:layout_constraintStart_toEndOf="@id/tv_start_date"
		app:layout_constraintEnd_toStartOf="@+id/tv_end_date"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
		android:id="@+id/tv_end_date"
		style="@style/LayoutWidthHeightZero"
		android:layout_height="@dimen/_30sdp"
		android:clipToPadding="false"
		tools:text="01/05/2023"
		android:textColor="@color/gray_text"
		android:gravity="center"
		android:textSize="@dimen/_10sdp"
		android:layout_marginEnd="@dimen/_10sdp"
		android:background="@drawable/gray_border"
		android:fontFamily="@font/inter_regular"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/view_line1"
		app:layout_constraintEnd_toStartOf="@+id/cl_filter_type"/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_filter_type"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/_30sdp"
		android:minWidth="@dimen/_50sdp"
		android:padding="@dimen/_1sdp"
		app:guidelineUseRtl="true"
		app:chainUseRtl="true"
		android:visibility="gone"
		android:layout_marginEnd="@dimen/_10sdp"
		android:background="@drawable/gray_border"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<ImageView
			android:id="@+id/iv_status_type"
			android:layout_width="@dimen/_11sdp"
			android:layout_height="@dimen/_11sdp"
			android:src="@drawable/ic_filter"
			android:layout_marginStart="@dimen/_5sdp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:contentDescription="@string/username_title" />

		<Spinner
			android:id="@+id/status_type_spinner"
			style="@style/LoginSubFontsWrap"
			android:minHeight="@dimen/_38sdp"
			android:textSize="@dimen/_10sdp"
			android:includeFontPadding="false"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@id/iv_status_type"
			app:layout_constraintEnd_toEndOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>


	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/_1sdp"
		android:background="@color/line_color"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
