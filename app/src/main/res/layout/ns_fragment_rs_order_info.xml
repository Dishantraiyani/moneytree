<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.vouchers.joining.NSPendingVoucherFragment">

	<include android:id="@+id/layout_header"
		layout="@layout/layout_header"/>

	<TextView
		android:id="@+id/tv_categories"
		style="@style/LoginSubFontsZeroWrap"
		android:text="@string/categories"
		android:textColor="@color/black"
		android:layout_marginStart="@dimen/_10sdp"
		android:layout_marginTop="@dimen/_15sdp"
		android:textSize="@dimen/_10sdp"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/card_categories_type"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_6sdp"
		app:cardCornerRadius="@dimen/_5sdp"
		android:visibility="gone"
		android:layout_marginHorizontal="@dimen/_10sdp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_categories">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_categories_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/_1sdp"
			app:guidelineUseRtl="true"
			app:chainUseRtl="true"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

			<ImageView
				android:id="@+id/iv_categories_type"
				android:layout_width="@dimen/_15sdp"
				android:layout_height="@dimen/_15sdp"
				android:src="@drawable/ic_filter"
				android:layout_marginStart="@dimen/_10sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:contentDescription="@string/username_title" />

			<TextView
				android:id="@+id/categories_type_spinner"
				style="@style/LoginSubFontsZeroWrap"
				android:paddingHorizontal="@dimen/_10sdp"
				android:minHeight="@dimen/_38sdp"
				android:textSize="@dimen/_12sdp"
				app:isApply="true"
				android:gravity="center_vertical"
				android:textColor="@color/black"
				android:includeFontPadding="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@id/iv_categories_type"
				app:layout_constraintEnd_toEndOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_product_not_found"
		style="@style/LayoutWidthHeightZero"
		app:layout_constraintBottom_toTopOf="@id/cv_progress"
		app:layout_constraintTop_toBottomOf="@id/card_categories_type"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:visibility="gone">

		<TextView
			android:id="@+id/tv_product_not_found"
			style="@style/LayoutWidthHeightZero"
			android:paddingVertical="@dimen/_6sdp"
			android:clipToPadding="false"
			android:text="@string/no_item"
			android:textColor="@color/black"
			android:gravity="center|bottom"
			android:textSize="@dimen/_18sdp"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/tv_product_not_found_sub"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

		<TextView
			android:id="@+id/tv_product_not_found_sub"
			style="@style/LayoutWidthHeightZero"
			android:clipToPadding="false"
			android:text="@string/no_products_available"
			android:textColor="@color/gray_text"
			android:gravity="center|top"
			android:textSize="@dimen/_14sdp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_product_not_found"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

	<TextView
		android:id="@+id/tv_address"
		style="@style/LoginSubFontsZeroWrap"
		android:text="@string/categories"
		android:textColor="@color/black"
		android:textSize="@dimen/_12sdp"
		android:padding="@dimen/_10sdp"
		android:background="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/card_categories_type"/>

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/srl_refresh"
		style="@style/LayoutWidthHeightZero"
		app:layout_constraintBottom_toTopOf="@id/cv_progress"
		app:layout_constraintTop_toBottomOf="@id/tv_address"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rv_history_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="@dimen/_10sdp"
			android:paddingBottom="0dp"
			android:paddingHorizontal="@dimen/_10sdp"
			android:clipToPadding="false"
			android:visibility="gone"/>

	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<RelativeLayout
		android:id="@+id/cv_progress"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_40sdp"
		android:visibility="gone"
		android:background="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<ProgressBar
			android:layout_width="@dimen/_22sdp"
			android:layout_height="@dimen/_22sdp"
			android:layout_centerInParent="true" />

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
