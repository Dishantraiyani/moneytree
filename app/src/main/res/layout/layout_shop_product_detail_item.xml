<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cl_shop_item" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
	android:layout_marginTop="@dimen/_5sdp"
	android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_product_layout_grid"
		android:layout_width="@dimen/_170sdp"
		android:layout_height="wrap_content"
		android:padding="@dimen/_5sdp">

		<ImageView
			android:id="@+id/iv_product_img_grid"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:src="@drawable/placeholder"
			android:scaleType="centerCrop"
			app:layout_constraintDimensionRatio="W,1:1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<View
			android:id="@+id/view_line"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginTop="@dimen/_5sdp"
			android:background="@color/line_color"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/iv_product_img_grid"/>

		<TextView
			android:id="@+id/tv_product_name_grid"
			style="@style/LoginSubFontsZeroWrap"
			tools:text="Product Name"
			android:gravity="start"
			android:textColor="@color/black"
			android:layout_marginTop="@dimen/_5sdp"
			android:textStyle="bold"
			android:textSize="@dimen/_11sdp"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:marqueeRepeatLimit ="marquee_forever"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:scrollHorizontally="true"
			android:fontFamily="@font/inter_semi_bold"
			android:paddingHorizontal="@dimen/_5sdp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/view_line" />

		<TextView
			android:id="@+id/tv_rate_grid"
			style="@style/LoginSubFontsZeroWrap"
			tools:text="Rate : 1"
			android:textSize="@dimen/_9sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:visibility="gone"
			android:textColor="@color/gray_text"
			android:paddingStart="@dimen/_5sdp"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_product_name_grid"
			/>

		<TextView
			android:id="@+id/tv_price_title_grid"
			style="@style/LoginSubFontsWrap"
			android:text="@string/mrp_price"
			android:textSize="@dimen/_9sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/gray_text"
			android:paddingStart="@dimen/_5sdp"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_rate_grid" />

		<TextView
			android:id="@+id/tv_price_grid"
			style="@style/LoginSubFontsZeroWrap"
			tools:text="1Rs"
			android:textSize="@dimen/_9sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/black"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/tv_price_title_grid"
			app:layout_constraintTop_toBottomOf="@+id/tv_rate_grid" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_marginTop="@dimen/_5sdp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_price_title_grid">

			<TextView
				android:id="@+id/tv_qty_title_grid"
				style="@style/LoginSubFontsWrap"
				android:text="@string/stock_qty"
				android:textSize="@dimen/_9sdp"
				android:gravity="start"
				app:guidelineUseRtl="true"
				android:textColor="@color/gray_text"
				android:paddingStart="@dimen/_5sdp"
				android:lines="1"
				android:fontFamily="@font/inter_semi_bold"
				android:paddingEnd="@dimen/_5sdp"
				app:layout_constraintTop_toTopOf="@id/qut_grid"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_price_title_grid"
				app:layout_constraintBottom_toBottomOf="@+id/qut_grid"/>

			<TextView
				android:id="@+id/tv_stock_qty_grid"
				style="@style/LoginSubFontsZeroWrap"
				tools:text="1"
				android:layout_weight="1"
				android:textSize="@dimen/_9sdp"
				android:gravity="start"
				app:guidelineUseRtl="true"
				android:textColor="@color/black"
				android:lines="1"
				android:fontFamily="@font/inter_medium"
				android:paddingEnd="@dimen/_5sdp"
				app:layout_constraintStart_toEndOf="@id/tv_qty_title_grid"
				app:layout_constraintEnd_toStartOf="@id/qut_grid"
				app:layout_constraintTop_toTopOf="@id/qut_grid"
				app:layout_constraintTop_toBottomOf="@+id/tv_price_title_grid"
				app:layout_constraintBottom_toBottomOf="@+id/qut_grid"/>

			<LinearLayout
				android:id="@+id/qut_grid"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingHorizontal="@dimen/_5sdp"
				android:paddingVertical="@dimen/_1sdp"
				android:layout_marginStart="@dimen/_5sdp"
				android:background="@drawable/gray_round_second"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_price_title_grid"
				android:layout_marginBottom="@dimen/_1sdp"
				android:layout_marginEnd="@dimen/_5sdp">

				<ImageView
					android:id="@+id/add_grid"
					android:layout_width="@dimen/_16sdp"
					android:layout_height="@dimen/_16sdp"
					android:padding="@dimen/_3sdp"
					android:src="@drawable/ic_add"
					android:focusable="true"
					android:clickable="true"
					android:layout_marginEnd="@dimen/_5sdp"
					android:layout_gravity="center_vertical"/>

				<TextView
					android:id="@+id/tv_qty_grid"
					style="@style/LoginSubFontsWrap"
					tools:text="1"
					android:textSize="@dimen/_11sdp"
					android:gravity="center"
					app:guidelineUseRtl="true"
					android:textColor="@color/orange"
					android:lines="1"
					android:fontFamily="@font/inter_medium"
					android:layout_gravity="center" />

				<ImageView
					android:id="@+id/remove_grid"
					android:layout_width="@dimen/_16sdp"
					android:layout_height="@dimen/_16sdp"
					android:padding="@dimen/_3sdp"
					android:focusable="true"
					android:clickable="true"
					android:layout_marginStart="@dimen/_5sdp"
					android:src="@drawable/ic_minus_black"
					android:layout_gravity="center_vertical"/>
			</LinearLayout>

		</LinearLayout>



	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
