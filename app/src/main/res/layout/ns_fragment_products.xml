<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.vouchers.joining.NSPendingVoucherFragment">

	<include android:id="@+id/layout_header"
		layout="@layout/layout_header"/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_filter_change_btn"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_38sdp"
		android:padding="@dimen/_1sdp"
		app:guidelineUseRtl="true"
		app:chainUseRtl="true"
		android:layout_marginTop="@dimen/_6sdp"
		android:layout_marginHorizontal="@dimen/_10sdp"
		app:layout_constrainedWidth="true"
		android:background="@drawable/gray_border"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header">

		<ImageView
			android:id="@+id/iv_status_filter"
			android:layout_width="@dimen/_15sdp"
			android:layout_height="@dimen/_15sdp"
			android:src="@drawable/ic_filter"
			android:layout_marginStart="@dimen/_10sdp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:contentDescription="@string/username_title" />

		<TextView
			style="@style/LoginSubFontsZeroWrap"
			android:minHeight="@dimen/_38sdp"
			android:layout_marginStart="@dimen/_5sdp"
			android:textSize="@dimen/_12sdp"
			android:text="@string/select_filter"
			android:includeFontPadding="false"
			android:gravity="center_vertical"
			android:textColor="@color/black"
			android:paddingHorizontal="@dimen/_10sdp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@id/iv_status_filter"
			app:layout_constraintEnd_toStartOf="@id/iv_drop_down"/>

		<ImageView
			android:id="@+id/iv_drop_down"
			android:layout_width="@dimen/_18sdp"
			android:layout_height="@dimen/_18sdp"
			android:src="@drawable/ic_spinner_drop_down"
			android:layout_marginEnd="@dimen/_10sdp"
			android:tint="@color/black"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:contentDescription="@string/username_title"
			tools:ignore="UseAppTint" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_product_not_found"
		style="@style/LayoutWidthHeightZero"
		app:layout_constraintBottom_toTopOf="@id/cv_progress"
		app:layout_constraintTop_toBottomOf="@id/cl_filter_change_btn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:visibility="gone">

		<TextView
			android:id="@+id/tv_product_not_found"
			style="@style/LayoutWidthHeightZero"
			android:paddingVertical="@dimen/_6sdp"
			android:clipToPadding="false"
			android:text="@string/no_item"
			android:textColor="@color/black"
			android:gravity="center|bottom"
			android:textSize="@dimen/_18sdp"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/tv_product_not_found_sub"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

		<TextView
			android:id="@+id/tv_product_not_found_sub"
			style="@style/LayoutWidthHeightZero"
			android:clipToPadding="false"
			android:text="@string/no_products_available"
			android:textColor="@color/gray_text"
			android:gravity="center|top"
			android:textSize="@dimen/_14sdp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_product_not_found"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/srl_refresh"
		style="@style/LayoutWidthHeightZero"
		app:layout_constraintBottom_toTopOf="@id/cv_progress"
		app:layout_constraintTop_toBottomOf="@id/cl_filter_change_btn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rv_product_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="@dimen/_10sdp"
			android:paddingBottom="0dp"
			android:paddingHorizontal="@dimen/_10sdp"
			android:clipToPadding="false"
			android:visibility="gone"/>

	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<RelativeLayout
		android:id="@+id/cv_progress"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_40sdp"
		android:visibility="gone"
		android:background="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@id/ll_item">

		<ProgressBar
			android:layout_width="@dimen/_22sdp"
			android:layout_height="@dimen/_22sdp"
			android:layout_centerInParent="true" />

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/ll_item"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/holo_red_dark"
		android:gravity="bottom|end"
		android:visibility="gone"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/_45sdp"
			android:layout_gravity="bottom"
			android:background="@drawable/box6"
			android:baselineAligned="false"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginTop="10dp"
				android:text="@string/total_savings"
				android:textColor="@color/black"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/total_discount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:visibility="gone"
				app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
				app:layout_constraintStart_toStartOf="@+id/total_amount" />

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_8sdp"
				android:text="@string/total_amount"
				android:textColor="@color/black"
				android:fontFamily="@font/inter_medium"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/textView3"
				app:layout_constraintBottom_toBottomOf="parent"/>

			<TextView
				android:id="@+id/total_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_8sdp"
				android:textColor="@color/black"
				android:fontFamily="@font/inter_semi_bold"
				app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
				app:layout_constraintStart_toEndOf="@+id/textView5" />

			<TextView
				android:id="@+id/proceed"
				android:layout_width="@dimen/_60sdp"
				android:layout_height="@dimen/_28sdp"
				android:layout_marginHorizontal="@dimen/_10sdp"
				android:background="@drawable/orange_button_order_border"
				android:text="@string/view"
				android:textColor="@color/white"
				android:gravity="center"
				android:fontFamily="@font/inter_medium"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</LinearLayout>

	<androidx.cardview.widget.CardView
		android:id="@+id/cl_bottom_sheet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		app:cardBackgroundColor="#22000000"
		android:background="#22000000">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:paddingVertical="@dimen/_15sdp"
			android:paddingHorizontal="@dimen/_10sdp"
			android:layout_gravity="bottom"
			android:background="@drawable/half_top_corners"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

			<Button
				android:id="@+id/btn_stock"
				style="@style/LayoutWidthHeightZeroWrap"
				android:layout_width="match_parent"
				android:background="@drawable/login_button_border"
				android:text="@string/stock"
				android:textColor="@color/white"
				android:textAllCaps="true"
				android:textSize="@dimen/_12sdp"
				android:fontFamily="@font/inter_regular"
				android:layout_marginHorizontal="@dimen/_5sdp" />

			<Button
				android:id="@+id/btn_repurchase"
				style="@style/LayoutWidthHeightZeroWrap"
				android:layout_width="match_parent"
				android:background="@drawable/orange_border_five"
				android:text="@string/repurchase"
				android:textColor="@color/orange"
				android:textAllCaps="true"
				android:textSize="@dimen/_12sdp"
				android:fontFamily="@font/inter_regular"
				android:layout_marginHorizontal="@dimen/_5sdp"
				android:layout_marginTop="@dimen/_10sdp" />

		</LinearLayout>


	</androidx.cardview.widget.CardView>


	<RelativeLayout
		android:id="@+id/rl_filter"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:visibility="gone"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"
		app:layout_constraintBottom_toBottomOf="parent">

		<View
			android:id="@+id/view_filter"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#11000000"/>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_filter"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/_15sdp"
			android:elevation="@dimen/_5sdp"
			android:background="@drawable/layout_bottom_corners">

			<TextView
				android:id="@+id/tv_categories"
				style="@style/LoginSubFontsZeroWrap"
				android:text="@string/categories"
				android:textColor="@color/black"
				android:textSize="@dimen/_10sdp"
				android:visibility="gone"
				app:layout_constraintEnd_toEndOf="@id/card_categories_type"
				app:layout_constraintStart_toStartOf="@+id/card_categories_type"
				app:layout_constraintTop_toTopOf="parent"/>

			<TextView
				android:id="@+id/tv_diseases"
				style="@style/LoginSubFontsZeroWrap"
				android:text="@string/diseases"
				android:textColor="@color/black"
				android:textSize="@dimen/_10sdp"
				android:visibility="gone"
				app:layout_constraintEnd_toEndOf="@id/card_diseases_type"
				app:layout_constraintStart_toStartOf="@id/card_diseases_type"
				app:layout_constraintTop_toTopOf="parent"/>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_categories_type"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_6sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:visibility="gone"
				android:layout_marginStart="@dimen/_10sdp"
				android:layout_marginEnd="@dimen/_5sdp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toStartOf="@id/card_diseases_type"
				app:layout_constraintTop_toBottomOf="@id/tv_categories">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_categories_type"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_categories_type"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_filter"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/username_title" />

					<TextView
						android:id="@+id/categories_type_spinner"
						style="@style/LoginSubFontsZeroWrap"
						android:paddingHorizontal="@dimen/_10sdp"
						android:minHeight="@dimen/_38sdp"
						android:textSize="@dimen/_12sdp"
						app:isApply="true"
						android:gravity="center_vertical"
						android:textColor="@color/black"
						android:includeFontPadding="false"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_categories_type"
						app:layout_constraintEnd_toEndOf="parent"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_diseases_type"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_6sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				android:visibility="gone"
				android:layout_marginStart="@dimen/_5sdp"
				android:layout_marginEnd="@dimen/_10sdp"
				app:layout_constraintStart_toEndOf="@id/card_categories_type"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/tv_categories">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_diseases_type"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_1sdp"
					app:guidelineUseRtl="true"
					app:chainUseRtl="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

					<ImageView
						android:id="@+id/iv_diseases_type"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:src="@drawable/ic_filter"
						android:layout_marginStart="@dimen/_10sdp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:contentDescription="@string/username_title" />

					<TextView
						android:id="@+id/diseases_type_spinner"
						style="@style/LoginSubFontsZeroWrap"
						android:paddingHorizontal="@dimen/_10sdp"
						android:minHeight="@dimen/_38sdp"
						android:textSize="@dimen/_12sdp"
						app:isApply="true"
						android:gravity="center_vertical"
						android:textColor="@color/black"
						android:includeFontPadding="false"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@id/iv_diseases_type"
						app:layout_constraintEnd_toEndOf="parent"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/cl_filter_type"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_38sdp"
				android:padding="@dimen/_1sdp"
				app:guidelineUseRtl="true"
				app:chainUseRtl="true"
				android:layout_marginTop="@dimen/_6sdp"
				android:layout_marginHorizontal="@dimen/_10sdp"
				app:layout_constrainedWidth="true"
				android:background="@drawable/gray_border"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/card_categories_type">

				<ImageView
					android:id="@+id/iv_status_type"
					android:layout_width="@dimen/_15sdp"
					android:layout_height="@dimen/_15sdp"
					android:src="@drawable/ic_filter"
					android:layout_marginStart="@dimen/_10sdp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					android:contentDescription="@string/username_title" />

				<Spinner
					android:id="@+id/status_type_spinner"
					style="@style/LoginSubFontsZeroWrap"
					android:minHeight="@dimen/_38sdp"
					android:layout_marginStart="@dimen/_5sdp"
					android:textSize="@dimen/_12sdp"
					android:includeFontPadding="false"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toEndOf="@id/iv_status_type"
					app:layout_constraintEnd_toEndOf="parent"/>

			</androidx.constraintlayout.widget.ConstraintLayout>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
