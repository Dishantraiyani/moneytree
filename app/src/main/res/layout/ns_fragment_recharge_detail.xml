<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.NSRegisterFragment">

    <include android:id="@+id/layout_header"
        layout="@layout/layout_header"/>

	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_15sdp"
				app:cardCornerRadius="@dimen/_5sdp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingHorizontal="@dimen/_10sdp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:paddingVertical="@dimen/_15sdp">

						<TextView
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/recharge_type"
							android:maxWidth="@dimen/_100sdp"
							android:textColor="@color/black"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_recharge_value"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:text="kllk;lk;llk;lk;lk;lklk;lklkl;kklk;"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal">

						<TextView
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/service_provider"
							android:textColor="@color/black"
							android:maxWidth="@dimen/_100sdp"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_service_provider"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/tv_account_display"
							style="@style/LoginSubFontsWrap"
							android:maxWidth="@dimen/_100sdp"
							android:maxLines="2"
							android:layout_marginStart="@dimen/_5sdp"
							android:textColor="@color/black"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_account_display_value"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/tv_amount_title"
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/amount_"
							android:textColor="@color/black"
							android:maxWidth="@dimen/_100sdp"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_amount"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:id="@+id/ll_notes"
						android:visibility="gone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal">

						<TextView
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/note"
							android:maxWidth="@dimen/_100sdp"
							android:textColor="@color/black"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_note"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:id="@+id/ll_ad1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal"
						android:visibility="gone">

						<TextView
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/ad1"
							android:maxWidth="@dimen/_100sdp"
							android:textColor="@color/black"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_ad1"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:maxWidth="@dimen/_100sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:id="@+id/ll_ad2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal"
						android:visibility="gone">

						<TextView
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/ad2"
							android:maxWidth="@dimen/_100sdp"
							android:textColor="@color/black"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_ad2"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<LinearLayout
						android:id="@+id/ll_ad3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_15sdp"
						android:orientation="horizontal"
						android:visibility="gone">

						<TextView
							style="@style/LoginSubFontsWrap"
							android:layout_marginStart="@dimen/_5sdp"
							android:text="@string/ad3"
							android:maxWidth="@dimen/_100sdp"
							android:textColor="@color/black"
							android:textSize="@dimen/_10sdp" />

						<TextView
							android:id="@+id/tv_ad3"
							style="@style/LoginSubFontsZeroWrap"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:textSize="@dimen/_10sdp"
							android:background="@drawable/phone_white_background"
							android:gravity="end|center_vertical"
							android:paddingHorizontal="@dimen/_10sdp"
							android:textColor="@color/black"
							android:textStyle="bold" />
					</LinearLayout>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<Button
				android:id="@+id/btn_submit"
				style="@style/LayoutWidthHeightZeroWrap"
				android:layout_width="match_parent"
				android:layout_marginHorizontal="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:background="@drawable/login_button_border"
				android:fontFamily="@font/inter_regular"
				android:text="@string/submit"
				android:textAllCaps="true"
				android:textColor="@color/white"
				android:textSize="@dimen/_12sdp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/card_transaction_password" />


		</LinearLayout>

	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
