<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_member_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:guidelineUseRtl="true"
            app:chainUseRtl="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

            <RadioButton
                android:id="@+id/rb_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_ico"
                android:buttonTint="@color/orange"
                android:clickable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/username_title" />

            <TextView
                android:id="@+id/et_user_name"
                style="@style/LoginSubFontsZeroWrap"
                android:textColor="@color/black"
                android:lines="1"
                tools:text=""
                android:background="@drawable/phone_white_background"
                android:paddingHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp"
                android:textColorHint="@color/hint_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/rb_checked"
                app:layout_constraintEnd_toStartOf="@+id/iv_delete" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/LoginSubFontsZeroWrap"
                android:textColor="@color/black"
                android:background="@drawable/phone_white_background"
                android:paddingHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_11sdp"
                android:paddingVertical="0dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColorHint="@color/hint_color"
                app:layout_constraintTop_toBottomOf="@+id/et_user_name"
                app:layout_constraintStart_toEndOf="@id/rb_checked"
                app:layout_constraintEnd_toStartOf="@+id/iv_delete" />

            <Button
                android:id="@+id/btn_edit_address"
                style="@style/LayoutWidthHeightZeroWrap"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/orange_border"
                android:text="@string/edit_address"
                android:textColor="@color/orange"
                android:textAllCaps="false"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                android:fontFamily="@font/inter_regular"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/rb_checked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_trash"
                android:tint="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/rb_checked"
                android:contentDescription="@string/username_title"
                tools:ignore="UseAppTint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>