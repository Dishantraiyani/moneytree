<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/background_gray"
	android:orientation="vertical">

	<include
		android:id="@+id/layout_header"
		layout="@layout/layout_header" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rv_cart_item"
		android:layout_width="0dp"
		android:layout_height="0dp"
		tools:listitem="@layout/layout_cart_item"
		android:paddingHorizontal="@dimen/_10sdp"
		android:paddingVertical="@dimen/_5sdp"
		android:clipToPadding="false"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"
		app:layout_constraintBottom_toTopOf="@id/ll_item"/>

	<LinearLayout
		android:id="@+id/ll_item"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/holo_red_dark"
		android:gravity="bottom|end"
		android:visibility="visible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/_45sdp"
			android:layout_gravity="bottom"
			android:background="@drawable/box6"
			android:baselineAligned="false"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginTop="10dp"
				android:text="@string/total_savings"
				android:textColor="@color/black"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/total_discount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:visibility="gone"
				app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
				app:layout_constraintStart_toStartOf="@+id/total_amount" />

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_8sdp"
				android:text="@string/total_amount"
				android:textColor="@color/black"
				android:fontFamily="@font/inter_medium"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/textView3"
				app:layout_constraintBottom_toBottomOf="parent"/>

			<TextView
				android:id="@+id/total_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_8sdp"
				android:text=""
				android:textColor="@color/black"
				android:fontFamily="@font/inter_semi_bold"
				app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
				app:layout_constraintStart_toEndOf="@+id/textView5" />

			<TextView
				android:id="@+id/proceed"
				android:layout_width="@dimen/_80sdp"
				android:layout_height="@dimen/_28sdp"
				android:layout_marginHorizontal="@dimen/_10sdp"
				android:background="@drawable/orange_button_order_border"
				android:text="@string/place_order"
				android:textColor="@color/white"
				android:gravity="center"
				android:fontFamily="@font/inter_medium"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/empty_cart"
		style="@style/LayoutWidthHeightWrap"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:visibility="gone"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"
		app:layout_constraintBottom_toBottomOf="parent">

		<ImageView
			android:layout_width="@dimen/_100sdp"
			android:layout_height="@dimen/_100sdp"
			android:layout_marginStart="@dimen/_5sdp"
			android:src="@drawable/ic_shopping_cart_black"
			android:contentDescription="@string/your_cart_is_empty" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="@dimen/_12sdp"
			android:fontFamily="@font/inter_regular"
			android:text="@string/your_cart_is_empty" />

		<TextView
			android:id="@+id/tv_start_shopping"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/inter_semi_bold"
			android:gravity="center"
			android:layout_marginTop="@dimen/_2sdp"
			android:text="@string/start_shopping"
			android:textSize="@dimen/_10sdp"
			android:textColor="@color/orange"
			/>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

