<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cl_shop_item" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="@dimen/_2sdp"
	app:cardUseCompatPadding="true"
	android:layout_marginBottom="@dimen/_5sdp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_doctor_layout"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_75sdp"
		android:paddingHorizontal="@dimen/_5sdp">

		<ImageView
			android:id="@+id/iv_doctor_img"
			android:layout_width="@dimen/_65sdp"
			android:layout_height="@dimen/_65sdp"
			android:src="@drawable/placeholder"
			android:scaleType="centerCrop"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_doctor_name"
			style="@style/LoginSubFontsZeroWrap"
			tools:text="Product Name"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/black"
			android:layout_marginTop="@dimen/_5sdp"
			android:paddingStart="@dimen/_10sdp"
			android:lines="1"
			android:textStyle="bold"
			android:textSize="@dimen/_12sdp"
			android:fontFamily="@font/inter_semi_bold"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintEnd_toStartOf="@id/iv_detail"
			app:layout_constraintStart_toEndOf="@id/iv_doctor_img"
			app:layout_constraintTop_toTopOf="parent" />

		<ImageView
			android:id="@+id/iv_detail"
			android:layout_width="@dimen/_18sdp"
			android:layout_height="@dimen/_18sdp"
			android:padding="@dimen/_3sdp"
			android:src="@drawable/arrow_right"
			android:layout_marginEnd="@dimen/_5sdp"
			android:layout_gravity="center_vertical"
			tools:ignore="UseAppTint"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_education"
			style="@style/LoginSubFontsZeroWrap"
			tools:text="Rate : 1"
			android:textSize="@dimen/_10sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/orange"
			android:paddingStart="@dimen/_10sdp"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toEndOf="@id/iv_doctor_img"
			app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name"
			/>

		<TextView
			android:id="@+id/tv_experience_title"
			style="@style/LoginSubFontsWrap"
			android:text="@string/experience"
			android:textSize="@dimen/_10sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/gray_text"
			android:paddingStart="@dimen/_10sdp"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toEndOf="@id/tv_education"
			app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name" />

		<TextView
			android:id="@+id/tv_experience"
			style="@style/LoginSubFontsWrap"
			tools:text="1"
			android:textSize="@dimen/_10sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/black"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toEndOf="@id/tv_experience_title"
			app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name" />

		<TextView
			android:id="@+id/tv_charge_title"
			style="@style/LoginSubFontsWrap"
			android:text="@string/charges"
			android:textSize="@dimen/_10sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/gray_text"
			android:paddingStart="@dimen/_10sdp"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toEndOf="@id/iv_doctor_img"
			app:layout_constraintTop_toBottomOf="@+id/tv_experience" />

		<TextView
			android:id="@+id/tv_price"
			style="@style/LoginSubFontsWrap"
			tools:text="1Rs"
			android:textSize="@dimen/_10sdp"
			android:gravity="start"
			app:guidelineUseRtl="true"
			android:textColor="@color/black"
			android:lines="1"
			android:layout_marginTop="@dimen/_3sdp"
			android:fontFamily="@font/inter_medium"
			android:paddingEnd="@dimen/_5sdp"
			app:layout_constraintStart_toEndOf="@id/tv_charge_title"
			app:layout_constraintTop_toBottomOf="@+id/tv_experience_title" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
