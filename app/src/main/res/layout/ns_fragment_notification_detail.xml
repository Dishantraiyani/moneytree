<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/white"
    tools:context=".ui.mycart.productDetail.NSProductDetailFragment">

	<include android:id="@+id/layout_header"
		layout="@layout/layout_header"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/layout_header"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/iv_notification_img"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:src="@drawable/placeholder"
				android:scaleType="centerCrop"
				app:layout_constraintDimensionRatio="W,1:1"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>

			<View
				android:id="@+id/view_line"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background_gray"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/iv_notification_img"/>

			<TextView
				android:id="@+id/tv_product_name"
				style="@style/LoginSubFontsZeroWrap"
				tools:text="Product Name"
				android:gravity="start"
				app:guidelineUseRtl="true"
				android:textColor="@color/black"
				android:layout_marginTop="@dimen/_10sdp"
				android:lines="1"
				android:textStyle="bold"
				android:textSize="@dimen/_13sdp"
				android:fontFamily="@font/inter_semi_bold"
				android:paddingHorizontal="@dimen/_15sdp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/view_line"/>

			<TextView
				android:id="@+id/tv_description_title"
				style="@style/LoginSubFontsZeroWrap"
				android:text="@string/description"
				android:textSize="@dimen/_11sdp"
				android:gravity="start"
				app:guidelineUseRtl="true"
				android:textColor="@color/gray_text"
				android:paddingStart="@dimen/_15sdp"
				android:lines="1"
				android:layout_marginTop="@dimen/_6sdp"
				android:fontFamily="@font/inter_medium"
				android:paddingEnd="@dimen/_5sdp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

			<TextView
				android:id="@+id/tv_description"
				style="@style/LoginSubFontsZeroWrap"
				android:textSize="@dimen/_10sdp"
				android:gravity="start"
				app:guidelineUseRtl="true"
				android:textColor="@color/black"
				android:paddingStart="@dimen/_15sdp"
				android:lineSpacingExtra="2dp"
				android:layout_marginTop="@dimen/_1sdp"
				android:fontFamily="@font/inter_medium"
				android:paddingEnd="@dimen/_5sdp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_description_title" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
