<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context="com.moneytree.app.ui.youtube.detail.NSYoutubeViewFragment">

	<RelativeLayout
		android:id="@+id/rl_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<include
			android:id="@+id/layout_header"
			layout="@layout/layout_header" />

	</RelativeLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/ll_video_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/_150sdp"
		app:layout_constraintWidth_default="percent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/rl_toolbar">

		<com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
			android:id="@+id/videoFullScreenPlayer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/_150sdp"
			app:enableAutomaticInitialization="false"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<TextView
		android:id="@+id/tv_youtube_video_title"
		style="@style/LayoutWidthHeightZeroWrap"
		android:paddingVertical="@dimen/_12sdp"
		android:clipToPadding="false"
		android:textColor="@color/black"
		android:gravity="start"
		android:textSize="@dimen/_13sdp"
		android:textStyle="bold"
		android:paddingHorizontal="@dimen/_10sdp"
		app:layout_constraintTop_toBottomOf="@id/ll_video_layout"
		app:layout_constraintEnd_toStartOf="@id/tv_subscribe"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<ImageView
		android:id="@+id/iv_share"
		android:layout_width="@dimen/_16sdp"
		android:layout_height="@dimen/_16sdp"
		android:src="@drawable/ic_share"
		android:tint="@color/gray_text"
		android:gravity="center"
		android:layout_marginEnd="@dimen/_2sdp"
		app:layout_constraintTop_toTopOf="@id/tv_subscribe"
		app:layout_constraintBottom_toBottomOf="@id/tv_subscribe"
		app:layout_constraintEnd_toStartOf="@id/tv_subscribe"
		tools:ignore="UseAppTint"
		android:contentDescription="@string/add_new"/>

	<TextView
		android:id="@+id/tv_subscribe"
		style="@style/LayoutWidthHeightWrap"
		android:paddingVertical="@dimen/_12sdp"
		android:clipToPadding="false"
		android:textColor="@color/red"
		android:gravity="start"
		android:textSize="@dimen/_11sdp"
		android:textStyle="bold"
		android:textAllCaps="true"
		android:text="@string/subscribe"
		android:paddingHorizontal="@dimen/_10sdp"
		app:layout_constraintTop_toBottomOf="@id/ll_video_layout"
		app:layout_constraintStart_toEndOf="@id/tv_youtube_video_title"
		app:layout_constraintEnd_toEndOf="parent"/>

	<View
		android:id="@+id/view_line"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_youtube_video_title"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/line_color"/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_video_list"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/view_line"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_royalty_not_found"
			style="@style/LayoutWidthHeightZero"
			app:layout_constraintBottom_toTopOf="@id/cv_progress"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:visibility="gone">

			<TextView
				android:id="@+id/tv_royalty_not_found"
				style="@style/LayoutWidthHeightZero"
				android:paddingVertical="@dimen/_6sdp"
				android:clipToPadding="false"
				android:text="@string/no_item"
				android:textColor="@color/black"
				android:gravity="center|bottom"
				android:textSize="@dimen/_18sdp"
				android:textStyle="bold"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toTopOf="@+id/tv_royalty_not_found_sub"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>

			<TextView
				android:id="@+id/tv_royalty_not_found_sub"
				style="@style/LayoutWidthHeightZero"
				android:clipToPadding="false"
				android:text="@string/no_royalty_available"
				android:textColor="@color/gray_text"
				android:gravity="center|top"
				android:textSize="@dimen/_14sdp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@id/tv_royalty_not_found"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/srl_refresh"
			style="@style/LayoutWidthHeightZero"
			app:layout_constraintBottom_toTopOf="@id/cv_progress"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rv_youtube_list"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingTop="@dimen/_10sdp"
				android:paddingBottom="0dp"
				android:paddingHorizontal="@dimen/_5sdp"
				android:clipToPadding="false"
				android:visibility="gone"/>

		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

		<RelativeLayout
			android:id="@+id/cv_progress"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_40sdp"
			android:visibility="gone"
			android:background="@color/white"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">

			<ProgressBar
				android:layout_width="@dimen/_22sdp"
				android:layout_height="@dimen/_22sdp"
				android:layout_centerInParent="true" />

		</RelativeLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
