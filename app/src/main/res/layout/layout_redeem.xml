<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_entry_date"
        style="@style/LoginSubFontsZeroWrap"
        tools:text="Transfer Id: 1234567890"
        app:guidelineUseRtl="true"
        android:textColor="@color/orange"
        android:gravity="center|start"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_amount_data"
        style="@style/LoginSubFontsZeroWrap"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_entry_date" >

        <TextView
            android:id="@+id/tv_amount_title"
            style="@style/LoginSubFontsWrap"
            android:text="@string/amount"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_10sdp"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_regular"
            android:paddingEnd="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/LoginSubFontsWrap"
            tools:text="Value"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            />

        <TextView
            android:id="@+id/tv_admin_title"
            style="@style/LoginSubFontsWrap"
            android:text="@string/admin_data"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_10sdp"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            android:paddingEnd="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/tv_admin"
            style="@style/LoginSubFontsWrap"
            tools:text="Value"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            />

        <TextView
            android:id="@+id/tv_tds_title"
            style="@style/LoginSubFontsWrap"
            android:text="@string/tds"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_10sdp"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            android:paddingEnd="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/tv_tds"
            style="@style/LoginSubFontsWrap"
            tools:text="Value"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_amount"
        style="@style/LoginSubFontsZeroWrap"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_amount_data" >

        <TextView
            android:id="@+id/tv_total_title"
            style="@style/LoginSubFontsWrap"
            android:text="@string/total"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_10sdp"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_regular"
            android:paddingEnd="@dimen/_2sdp"
            />

        <TextView
            android:id="@+id/tv_total"
            style="@style/LoginSubFontsWrap"
            tools:text="Value"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            android:paddingEnd="@dimen/_5sdp"
            />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/ll_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>