<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_notification" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_top"
        style="@style/LoginSubFontsZeroWrap"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            style="@style/LoginSubFontsWrap"
            android:text="@string/member_id_title"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_regular"
            />

        <TextView
            android:id="@+id/tv_member_id"
            style="@style/LoginSubFontsWrap"
            tools:text="Value"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:lines="1"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_second"
        style="@style/LoginSubFontsZeroWrap"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_top" >

        <TextView
            style="@style/LoginSubFontsWrap"
            android:text="@string/status_title"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/black"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_regular"
            />

        <TextView
            android:id="@+id/tv_status"
            style="@style/LoginSubFontsWrap"
            tools:text="Value"
            android:gravity="start"
            app:guidelineUseRtl="true"
            android:textColor="@color/orange"
            android:paddingHorizontal="@dimen/_4sdp"
            android:lines="1"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/inter_medium"
            />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_second"/>

</androidx.constraintlayout.widget.ConstraintLayout>