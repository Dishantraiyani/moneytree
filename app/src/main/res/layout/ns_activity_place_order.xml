<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.password.NSChangePasswordFragment">

    <include android:id="@+id/layout_header"
        layout="@layout/layout_header"/>

    <androidx.core.widget.NestedScrollView
        style="@style/LayoutWidthHeightZero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_20sdp"
            android:paddingHorizontal="@dimen/_15sdp">

            <TextView
                style="@style/LoginSubFontsWrap"
                android:text="@string/delivery_address"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_member_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_member_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    app:guidelineUseRtl="true"
                    app:chainUseRtl="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_login_sub_title">

                    <ImageView
                        android:id="@+id/iv_member_id"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_location_ico"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/username_title" />

                    <TextView
                        android:id="@+id/et_user_name"
                        style="@style/LoginSubFontsZeroWrap"
                        android:textColor="@color/black"
                        android:lines="1"
                        tools:text="Dishant Ashokbhai Raiyani"
                        android:background="@drawable/phone_white_background"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:textColorHint="@color/hint_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_member_id"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/LoginSubFontsZeroWrap"
                        android:textColor="@color/black"
                        android:background="@drawable/phone_white_background"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_11sdp"
                        android:paddingVertical="0dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColorHint="@color/hint_color"
                        app:layout_constraintTop_toBottomOf="@+id/et_user_name"
                        app:layout_constraintStart_toEndOf="@id/iv_member_id"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:id="@+id/btn_edit_address"
                        style="@style/LayoutWidthHeightZeroWrap"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/orange_border"
                        android:text="@string/edit_address"
                        android:textColor="@color/orange"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_member_id"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_address"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    style="@style/LoginSubFontsWrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@string/products"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    style="@style/LoginSubFontsWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="@string/amount_title"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_product_title"
                    style="@style/LoginSubFontsWrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/LoginSubFontsWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/line_color"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    style="@style/LoginSubFontsWrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/total_"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    style="@style/LoginSubFontsWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    style="@style/LoginSubFontsWrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/delivery_charges"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_delivery_charge"
                    style="@style/LoginSubFontsWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    style="@style/LoginSubFontsWrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/reward_point"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_reward_point"
                    style="@style/LoginSubFontsWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    style="@style/LoginSubFontsWrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/grand_total"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_grand_total"
                    style="@style/LoginSubFontsWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notes"
                style="@style/LoginSubFontsWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/below_order"
                android:textColor="@color/red"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_9sdp"
                />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                style="@style/LayoutWidthHeightZeroWrap"
                android:background="@drawable/login_button_border"
                android:text="@string/place_order"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_new_password"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>